<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="8dp">

        <!-- Bagian Profil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageProfileLaporan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/admin_foto_profil"/>

            <TextView
                android:id="@+id/textUsernameLaporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kucing lucu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Gambar Konten -->
        <ImageView
            android:id="@+id/imageContentLaporan"
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:src="@drawable/admin_foto_profil"/>

        <!-- Komentar -->
        <TextView
            android:id="@+id/textCommentLaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ada yang buang sampah... tolong penjarakan."
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="#000000" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
