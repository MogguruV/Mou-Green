<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#609966">

    <!-- Background Image -->

    <!-- Back Button -->

    <!-- Title Image -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-1dp"
        android:src="@drawable/fitur_laporan_background_putih" />

    <ImageButton
        android:id="@+id/tombolKembaliLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/fitur_laporan_panah_kembali" />

    <!-- Name Text -->

    <!-- Name Input -->

    <ImageView
        android:id="@+id/textKritikSaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@id/tombolKembaliLaporan"
        android:src="@drawable/fitur_laporan_teks_laporan" />

    <TextView
        android:id="@+id/textNamaLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textKritikSaran"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="87dp"
        android:text="Nama"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputTextNamaLaporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNamaLaporan"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:inputType="text" />

    <!-- Email Text -->
    <TextView
        android:id="@+id/textKomentarLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputTextNamaLaporan"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:text="Tambahkan Komentar"
        android:textStyle="bold" />

    <!-- Comment Input -->
    <EditText
        android:id="@+id/inputTextKomentarLaporan"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_below="@id/textKomentarLaporan"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <!-- Attach File Button -->

    <!-- Submit Button -->

    <ImageButton
        android:id="@+id/tombolKirimFileLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputTextKomentarLaporan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/fitur_laporan_tombol_lampirkan_file" />

    <ImageButton
        android:id="@+id/tombolKirimLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tombolKirimFileLaporan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/fitur_kritik_tombol_kirim" />

</RelativeLayout>
